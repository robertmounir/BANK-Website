

<%- include('layouts/header')%>
  <body class="signing-body">
    <div class="jumbotron jumbotron-fluid">
      <div class="container-fluid text-center">
        <h2 class="display-4">GALAXY BANK</h2>
      </div>
    </div>
    <%- messages('partials/my_message_template') %>
    <%- messages('partials/my_message_template') %>
    <% if (typeof errors !=='undefined' ) { %>
      <% errors.forEach(error=> { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>
            <%= error.msg %>
          </strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

      <% }); %>
    <% } %>

    <div class="container ">
      <div class="row">
          <div class="col"></div>
          <div class="col-sm-12 col-md-8">
              <div class="card signing-card">
                  <div class="card-body">
                      <img src="css/images/logo1.png" class="img-fluid signing-img">
                      <form class="signing-form" action="/login" method="POST">
                          <div class="form-group">
                            <label ><h4> Username</h4></label>
                            <input type="text" class="form-control" id="emailinput" placeholder="ID" name="username">
                          </div>
                          <div class="form-group">
                            <label ><h4> Password</h4></label>
                            <input type="password" class="form-control" id="passwordinput" placeholder="Password " name="password">
                          </div>
                          <button type="submit" class="btn signing-btn btn-lg" >Sign In</button>
                          <div class="form-check">
                              <input class="form-check-input" type="checkbox" id="gridCheck">
                              <label class="form-check-label" for="gridCheck">
                               Remember me <a href="#">Need Help?</a>
                              </label>
                            </div>
                        </form>
                       
                  </div>
                  
                </div>
                <div class="row">
          <div class="col-12">
            <a href="/register" class="create-account register"><h4>Create New Account</h4></a>
          </div>

                </div>
                
          </div>
          <div class="col"></div>
      </div>

    </div>



<%- include('layouts/footer') %>

</form>

