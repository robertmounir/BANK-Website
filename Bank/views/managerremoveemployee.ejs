        <div class="col-sm-10 col-md-4 mb-5">
          <input type="text" class="form-control form-control-lg"  placeholder="ID Number" name = "RID">
        </div>

      </div>
      
      <div class="form-row">

        <div class="form-group  col-sm-10 col-md-4 mb-5 mx-auto">
