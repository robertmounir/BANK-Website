<%- include('layouts/header') %>
  <body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand text-primary  " href="/customer"><h5 > <%= username %></h5></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav" >
              <ul class="navbar-nav">
                <li class="nav-item ">
                  <a class="nav-link" href="/bank">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/customerdeposite">Deposit </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/customerWithdraw">Withdraw </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/customerTransaction">Transaction </a>
                  </li>
                   <li class="nav-item">
                    <a class="nav-link" href="/customerCheck">Check My account </a>
                   </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/customerloan">Take a loan </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/customercreditcard">Make a credit card </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/customerdepitcard">Make a debit card </a>
                  </li>
                
                  <div class="col">

                </ul>
              </div>
     
            </div>
          </nav>

          <div class="jumbotron jumbotron-fluid">
            <div class="container-fluid text-center">
              <h2 class="display-4">Welcome, <%= username %></h2>
              
            </div>
          </div>

    <%- messages('partials/my_message_template') %>
    <% if (typeof errors !=='undefined' ) { %>
      <% errors.forEach(error=> { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>
            <%= error.msg %>
          </strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <% }); %>
          <% } %>

    <div class="container ">
    <form novalidate action="/customerdeposite" method="POST">
      <div class="form-row">

        <label  class="col-sm-3 col-form-label col-form-label-lg"><h4>Account ID</h4></label>
        <div class="col-sm-10 col-md-4 mb-5 ">
          <input type="number" class="form-control form-control-lg"  placeholder="ID Number" name = "AID">
        </div>
       

      </div>
      <div class="form-row">

        <label  class="col-sm-3 col-form-label col-form-label-lg"><h4>Money To Deposite</h4></label>
        <div class="col-sm-10 col-md-4 mb-5">
          <input type="number" class="form-control form-control-lg"  placeholder="Money" name = "Money">
        </div>
       

      </div>
      
      <div class="form-row">

        <div class="form-group  col-sm-10 col-md-4 mb-5 mx-auto ">
       
          <button type="submit" class="btn btn-primary  btn-lg " >Deposite</button>
        </div>
      

      </div>
      
    </form>

    <p>
      <a class="btn btn-primary" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">See Your Deposit History</a>
      <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">Deposit Statistics</button>
    </p>
    <div class="row">
      <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample1">
            <table class="table table-dark table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Account ID</th>
                  <th scope="col">Customer ID</th>
                  <th scope="col">Amount</th>
                  <th scope="col">Deposit Date</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach(function(item){ %>
                <tr>
                  <th scope="row">1</th>
                  <td><%= item.ACC_ID %></td>
                  <td><%= item.Cust_ID%></td>
                  <td><%= item.Amount%></td>
                  <td><%= item.Dep_Date %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample2">
            <table class="table table-dark table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Maximum Deposit</th>
                  <th scope="col">Minimum Deposit</th>
                  <th scope="col">Average Deposit</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">1</th>
                  <td><%= statistics.max %></td>
                  <td><%= statistics.min%></td>
                  <td><%= statistics.avg%></td>
                </tr>
              </tbody>
            </table>
      </div>
    </div>

    </div>

 
<%- include('layouts/footer') %>