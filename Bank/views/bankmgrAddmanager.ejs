<%- include('layouts/header') %>

<body>
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand text-primary  " href="/manager">
        <h5><%= username %></h5>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item ">
            <a class="nav-link" href="/bank">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="/bankmgrAddemployee">Add Employee </a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/bankmgrAddmanager">Add Manager </a>
          </li>
  
        

        </ul>
      </div>

    </div>

    </nav>

    
    <%- messages('partials/my_message_template') %>
    <% if (typeof errors !=='undefined' ) { %>
      <% errors.forEach(error=> { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>
            <%= error.msg %>
          </strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <% }); %>
          <% } %>

            

    <div class="jumbotron jumbotron-fluid">
      <div class="container-fluid text-center">
        <h2 class="display-4">Welcome, <%= username %>
        </h2>

      </div>
    </div>

    <div class="container">
        <form class="needs-validation" novalidate action="/bankmgrAddmanager" method="POST">
          <div class="form-row">
            <label  class="col-sm-3 col-form-label col-form-label-lg"><h4>Employee ID</h4></label>
            <div class="col-sm-10 col-md-4 mb-5 ">
              <input type="text" class="form-control form-control-lg"  placeholder="Employee ID" name = "EID">
            </div>
          </div>

          <div class="form-row">
            <label  class="col-sm-3 col-form-label col-form-label-lg"><h4>Branchs List </h4></label>
            <div class="col-sm-10 col-md-4 mb-5">
              <div class="dropdown">
                <div class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                  Branchs
                </div>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <% data.forEach(function(item){ %>
                    <li><input class="form-check-input" type="radio" name="branch" id="<%= item.ID %>" value="<%= item.ID %>">
                    <label class="dropdown-item" for="<%= item.ID %>">
                      <%= item.ID %>
                    </label></li>
                  <% }); %>
                </ul>
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group  col-sm-10 col-md-4 mb-5 mx-auto ">
              <button type="submit"   class="btn btn-primary  btn-lg " >Confirm</button>
            </div>
          </div>
      </form>
      </div>


  


  </div>


  <%- include('layouts/footer') %>