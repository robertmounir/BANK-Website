              <h2 class="display-4">Welcome, <%= username %></h2>
              
            </div>
          </div>

          <%- messages('partials/my_message_template') %>
    <% if (typeof errors !=='undefined' ) { %>
      <% errors.forEach(error=> { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>
            <%= error.msg %>
          </strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <% }); %>
          <% } %>

    <div class="container ">
    <form novalidate action="/customerTransaction" method="POST">
      <div class="form-row">

        <label  class="col-sm-3 col-form-label col-form-label-lg"><h4>Sender ID</h4></label>
        <div class="col-sm-10 col-md-4 mb-5 ">
          <input type="number" class="form-control form-control-lg"  placeholder="ID Number" name = "AID">
        </div>
       

      </div>

      <div class="form-row">

        <label  class="col-sm-3 col-form-label col-form-label-lg"><h4>Reciver ID</h4></label>
        <div class="col-sm-10 col-md-4 mb-5 ">
          <input type="number" class="form-control form-control-lg"  placeholder="ID Number" name = "RID">
        </div>
       

      </div>

      <div class="form-row">

        <label  class="col-sm-3 col-form-label col-form-label-lg"><h4>Money To Transfer</h4></label>
        <div class="col-sm-10 col-md-4 mb-5">
          <input type="number" class="form-control form-control-lg"  placeholder="Money" name = "Money">
        </div>
       

      </div>
      
      <div class="form-row">

        <div class="form-group  col-sm-10 col-md-4 mb-5 mx-auto ">
       
          <button type="submit" class="btn btn-primary  btn-lg " >Transfer</button>
        </div>
      

      </div>
      
    </form>

    <p>
      <a class="btn btn-primary" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">See Your Transactions History</a>
      <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">Transactions Statistics</button>
    </p>
    <div class="row">
      <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample1">
          <table class="table table-dark table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Sender ID</th>
                <th scope="col">Reciever ID</th>
                <th scope="col">Money Transfered</th>
                <th scope="col">Transaction Date</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(function(item){ %>
              <tr>
                <th scope="row">1</th>
                <td><%= item.Sender_ID %></td>
                <td><%= item.Reciever_ID %></td>
                <td><%= item.Amount%></td>
                <td><%= item.trans_date %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      </div>
      <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample2">
          <table class="table table-dark table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Maximum Transaction</th>
                <th scope="col">Minimum Transaction</th>
                <th scope="col">Average Transaction</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td><%= statistics.max %></td>
                <td><%= statistics.min %></td>
                <td><%= statistics.avg %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    </div>

 
<%- include('layouts/footer') %>